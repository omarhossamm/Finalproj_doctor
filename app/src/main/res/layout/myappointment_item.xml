<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/time_reservation_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="41dp"
                android:layout_toStartOf="@+id/data_icon"
                android:layout_toLeftOf="@+id/data_icon"
                android:text="11:00 م"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/data_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/current_number"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_access_time_black_24dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/time_reservation_item"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_date_range_black_24dp" />

            <TextView
                android:id="@+id/date_reservation_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_reservation_item"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="41dp"
                android:text="الاربعاء, 13/7/2020"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/current_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total_reservision"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/total_reservision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textSize="20dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
